{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block body %}
    <h1>Products</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Beschrijving</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>BTW</th>
                <td>{{ product.vat }}</td>
            </tr>
            <tr>
                <th>Prijs</th>
                <td>{{ product.price }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('products_index') }}">Terug naar lijst</a>

    <a class="btn btn-warning" href="{{ path('products_edit', {'id': product.id}) }}">Aanpassen</a>

    {{ include('products/_delete_form.html.twig') }}
{% endblock %}
